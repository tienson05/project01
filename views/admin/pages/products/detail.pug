extends ../../layouts/defautl.pug 
block head
  link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet")
  link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
  link(href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet")
  link(rel="stylesheet", href="../admin/css/style-detail-product.css")
  style. 
    img {
      max-width: 90%;
    }
    .container {
      width: 1000px;
      height: 300px;
    }
block main
  .container
    .card
      .container-fliud
        .wrapper.row
          .preview.col-md-6
            .preview-pic.tab-content
              #pic-1.tab-pane.active
                img(src=product.image)
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;  
          .details.col-md-6
            h3.product-title #{product.name}
            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
            .rating
              .stars
                span.fa.fa-star.checked
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                span.fa.fa-star.checked
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                span.fa.fa-star.checked
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                span.fa.fa-star
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                span.fa.fa-star
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              span.review-no 41 reviews
            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
            p.product-description
              | !{product.description}
            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
            h4.price
              | current price: 
              span $#{product.priceCents / 100}
            .action
              a(
                href=`${prefixAdmin}/products/edit/${product.id}`
                class="add-to-cart btn btn-default"
              ) Chỉnh sửa
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              button.like.btn.btn-default(type='button')
                span.fa.fa-heart