extends ../../layouts/defautl.pug
include ../../mixins/alert.pug
block main
  +alert-success()
  +alert-error()
  h1(class="mb-4") Sửa nhóm quyền
  
  form(
    action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=data.title
        required
      )
    div(class="form-group")
      label(for="desc") Mô tả
      input(
        type="text"
        class="form-control"
        id="desc"
        name="description"
        value=data.description
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật
    