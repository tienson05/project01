extends ../../layouts/defautl.pug 
include ../../mixins/alert.pug
block main 
  +alert-success()
  +alert-error()
  h1(class='mb-4') Phân quyền

  if(records)
    div(data-records=records)
    div(class="text-right") 
      button(
        type="submit"
        class="btn btn-primary mb-3 mr-5"
        button-submit
      ) Cập nhật
    table(
      class="table table-hover table-sm"
      table-permissions
    )
      thead 
        tr 
          th Tính năng
          each item in records
            th(class="text-center") #{item.title}
      tbody
        tr(data-name="id" class="d-none")
          td
          each item in records 
            td(class="text-center") 
              input(value=item.id)
        //- Danh mục sản phẩm
        tr
          td(colspan="4" class="bg-light pb-2 pt-2") 
            h5 Danh mục sản phẩm
        tr(data-name="products-category_view")
          td Xem 
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="products-category_create")
          td Thêm mới
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="products-category_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="products-category_delete")
          td Xóa
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        //-Sản phẩm
        tr
          td(colspan="4" class="bg-light pb-2 pt-2") 
            h5 Sản phẩm
        tr(data-name="products_view")
          td Xem 
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="products_create")
          td Thêm mới
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="products_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="products_delete")
          td Xóa
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        //- Nhóm quyền
        tr
          td(colspan="4" class="bg-light pb-2 pt-2") 
            h5 Nhóm quyền
        tr(data-name="roles_view")
          td Xem 
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="roles_create")
          td Thêm mới
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="roles_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="roles_delete")
          td Xóa
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="permissions-undo")
          td Hoàn tác nhóm quyền
          each item in records
            td(class="text-center") 
              input(type="checkbox")
        tr(data-name="roles_permissions")
          td Phân quyền
          each item in records
            td(class="text-center") 
              input(type="checkbox")
  else 
    p Chưa có nhóm quyền nào được tạo


  form(
    action=`${prefixAdmin}/roles/permissions?_method=PATCH`
    method="POST"
    form-permissions
  ) 
    div(class="text-center d-none")
      input(
        type="text"
        name="permissions"
      )
  script(src="/admin/js/permissions.js") 