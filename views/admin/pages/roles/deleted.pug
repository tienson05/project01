extends ../../layouts/defautl.pug
include ../../mixins/alert.pug

block main 
  +alert-success()
  +alert-error()
  h1(class="mb-4") Nhóm quyền đã xóa

  .card.mb-3 
    .card-header Danh sách
    .card-body 
      table(
        class="table table-hover table-sm mt-4"
      )
        thead 
          tr
            th STT 
            th Nhóm quyền
            th Mô tả ngắn
            th Hành động
        tbody
          if(records.length > 0)
            each item, index in records 
              tr 
                td #{index + 1} 
                td #{item.title} 
                td #{item.description}
                td  
                  a(
                    class="btn btn-danger btn-sm"
                    href=`${prefixAdmin}/roles/undo/${item.id}`
                  ) Hoàn tác
          else 
            tr 
              td(colspan="4" class="text-center") Chưa có nhóm quyền nào được xóa